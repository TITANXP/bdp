<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bin</id>
    <!-- 指定打包类型 -->
    <formats>
        <format>zip</format>
    </formats>
    <!-- 指定是否包含打包层目录， 如project.build.finalName为output，值为true时，所以文件被放在output目录下，否则直接放在包的根目录下 -->
    <includeBaseDirectory>true</includeBaseDirectory>
    <!-- 指定要包含的文件集 -->
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>./lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>targe/classes/bin</directory>
            <outputDirectory>./bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>targer/classes/conf</directory>
            <outputDirectory>./conf</outputDirectory>
            <inclues>
                <include>*.xml</include>
                <include>*.sql</include>
                <include>*.conf</include>
                <include>*.properties</include>
            </inclues>
        </fileSet>
    </fileSets>
    <!--    用来定制工程依赖 jar 包的打包方式 -->
    <!--    outputDirectory	String	指定包依赖目录，该目录是相对于根目录-->
    <!--    includes/include*	List<String>	包含依赖-->
    <!--    excludes/exclude*	List<String>	排除依赖-->
    <dependencySets>
        <dependencySet>
            <outputDirectory>./lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>